<Application
    x:Class="ConvertWithMe.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ConvertWithMe.UI"
    xmlns:view="clr-namespace:ConvertWithMe.UI.Views"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/Fonts/Fonts.xaml" />
                <ResourceDictionary Source="Views/Styles/ToggleSwitch.xaml" />
                <ResourceDictionary Source="Views/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
