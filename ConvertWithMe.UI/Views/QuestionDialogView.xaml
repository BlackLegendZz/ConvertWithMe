<UserControl
    x:Class="ConvertWithMe.UI.Views.QuestionDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ConvertWithMe.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:ConvertWithMe.UI.ViewModels"
    Width="300"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=viewmodels:QuestionDialogViewModel}"
    d:DesignHeight="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock
                Grid.Row="0"
                FontWeight="Bold"
                Text="{Binding WindowTitle}" />
            <TextBlock
                Grid.Row="0"
                Text="{Binding Question}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Command="{Binding ButtonYesClickedCommand}"
                Content="Yes" />
            <Button
                Grid.Column="1"
                Command="{Binding ButtonNoClickedCommand}"
                Content="No" />
        </Grid>
    </Grid>
</UserControl>
