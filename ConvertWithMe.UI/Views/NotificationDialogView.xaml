<UserControl
    x:Class="ConvertWithMe.UI.Views.NotificationDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ConvertWithMe.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:ConvertWithMe.UI.ViewModels"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=viewmodels:NotificationDialogViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock
                Grid.Row="0"
                FontWeight="Bold"
                Text="{Binding WindowTitle}" />
            <TextBlock Grid.Row="0" Text="{Binding Message}" />
        </StackPanel>
        <Button
            Grid.Row="1"
            Command="{Binding ButtonClickedCommand}"
            Content="Ok" />
    </Grid>
</UserControl>
