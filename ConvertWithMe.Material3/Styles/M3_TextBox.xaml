<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Display  -->
    <Style x:Key="DisplayLarge_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="57" />
        <Setter Property="MinHeight" Value="64" />
    </Style>
    <Style x:Key="DisplayMedium_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="45" />
        <Setter Property="MinHeight" Value="52" />
    </Style>
    <Style x:Key="DisplaySmall_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="MinHeight" Value="44" />
    </Style>

    <!--  Headline  -->
    <Style x:Key="HeadlineLarge_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="MinHeight" Value="40" />
    </Style>
    <Style x:Key="HeadlineMedium_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="MinHeight" Value="36" />
    </Style>
    <Style x:Key="HeadlineSmall_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="MinHeight" Value="32" />
    </Style>

    <!--  Title  -->
    <Style x:Key="TitleLarge_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="MinHeight" Value="28" />
    </Style>
    <Style x:Key="TitleMedium_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoMedium}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinHeight" Value="24" />
    </Style>
    <Style x:Key="TitleSmall_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoMedium}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinHeight" Value="20" />
    </Style>

    <!--  Body  -->
    <Style x:Key="BodyLarge_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinHeight" Value="24" />
    </Style>
    <Style x:Key="BodyMedium_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinHeight" Value="20" />
    </Style>
    <Style x:Key="BodySmall_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="MinHeight" Value="16" />
    </Style>

    <!--  Label  -->
    <Style x:Key="LabelLarge_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoMedium}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinHeight" Value="20" />
    </Style>
    <Style x:Key="LabelMedium_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoMedium}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="MinHeight" Value="16" />
    </Style>
    <Style x:Key="LabelSmall_TBx" TargetType="{x:Type TextBox}">
        <Setter Property="FontFamily" Value="{StaticResource RobotoMedium}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="MinHeight" Value="16" />
    </Style>
</ResourceDictionary>